<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="cordova-plugin-asccardreader" version="0.0.1">
    <name>asccardreader</name>

    <description>An Android Cordova plugin</description>
    <license>MIT</license>

    <keywords>cordova,android</keywords>
    <repo>https://github.com/narisp/asc-cardreader.git</repo>
    <issue>https://github.com/narisp/asc-cardreader</issue>
  
    <engines>
        <engine name="cordova" version=">=3.0.0"/>
    </engines>
  
    <js-module src="www/asccardreader.js" name="asccardreader">
        <clobbers target="window.plugins.asccardreader" />
    </js-module>
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="asccardreader">
                <param name="android-package" value="com.narisp.cordova.plugin.asccardreader"/>
            </feature>
        </config-file>

        <source-file src="src/android/asccardreader.java" target-dir="src/com/narisp/cordova/plugin" />
    </platform>
</plugin>